#:import Factory kivy.factory.Factory

<ListItemWithCounter>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [3]
            # border: [10,10,10,10]
    text: root.list_title
    color: 0, 0,0,0
    on_release:
        root.parent.parent.parent.parent.parent.edit_list(root.list_index, root.list_number, root.list_screen)
        # print(root)

    CounterLabel:
        text: root.list_number
        theme_text_color: "Custom"
        color: 0.4,0.4,0.4,1


    IconButtonRight:
        icon: 'delete'
        theme_text_color: "Custom"
        text_color: 0.4,0.4,0.4,1
        on_release:
            root.parent.parent.parent.parent.parent.del_list(root.list_index, root.list_screen)

<SwipeButton>:
    listItem:listItem
    text: ''
    color: 0, 0,0,1
    ignore_perpendicular_swipes: True
    min_move: 20/self.width
    index:1
    canvas.before:
        Color:
            rgba: 1,1,1,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [3]
    Button:
        text: 'Done'
        color: 1,1,1,1
        background_color:(0,1,0,1) if self.state == 'normal' else (0,1,0,1)
        on_press:
            root.parent.parent.parent.parent.parent.del_item(root.item_index)
    ListItem:
        id: listItem
        text: root.item_name
        color: 0,0,0,1
        on_press:
            root.parent.parent.parent.parent.parent.item_info(root.item_index, listItem.text)

    Button:
        text: 'Delete'
        color: 1,1,1,1
        background_color:(1,0,0,1) if self.state == 'normal' else (1,0,0,1)
        on_press:
            root.parent.parent.parent.parent.parent.del_item(root.item_index)

<ListItem>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [3]
    text: root.item_name
    color: 0, 0,0,0
    # secondary_text: root.item_quantity
    # secondary_font_style: 'Subtitle2'
    orientation: 'horizontal'
    # on_press:
    #     root.parent.parent.parent.parent.parent.item_info(root.list_index, self.text)
    IconButtonLeft:
        icon: 'cart-outline'
        on_release:
            # print(root.list_index)
            root.parent.parent.parent.parent.parent.ch.add_to_statistics(root.list_index, root.parent.parent.parent.parent.parent.data)
            root.parent.parent.parent.parent.parent.del_item(root.list_index)
            # app.refresh_data(root.list_index, root.parent.parent.parent.parent.parent.list_number)

    OneLineAvatarIconListItem:
        text: root.item_name
        on_press:
            root.parent.parent.parent.parent.parent.item_info(root.list_index, self.text)
        CounterLabel:
            text: '\u20ac ' + root.item_price
            size_hint_x: None
            width: 50
            theme_text_color: "Custom"
            text_color: 0.4,0.4,0.4,1

    MDIconButton:
        icon: root.icon
        theme_text_color: 'Custom'
        text_color: 0,0,0.4,1

<ItemPopup>:
    item_name:item_name
    item_category:item_category
    item_price:item_price
    item_quantity:item_quantity
    item_image:item_image
    item_note:item_note
    id: pop
    # background_color:0, 0, 0, 0
    separator_height: 0
    # title:''
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0,0.4,0,1
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [16,16,16,16]
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: [10,0,10,0]
            MDIconButton:
                # size_hint_x: 0.1
                # width: 30
                icon: 'keyboard-backspace'
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                item_name: item_name.hint_text if item_name.hint_text != "" else item_name.text
                on_release:
                    root.caller.edit_item(item_name.text, item_category.text, item_quantity.text, item_price.text, item_note.text, item_image.text)
                    root.caller.refresh_item_database(item_name.text, item_category.text, item_price.text, item_image.text)
                    pop.dismiss()

            MDTextField:
                id: item_name
                size_hint_y: 0.85
                hint_text: "Item"
                text: pop.item_name
                # foreground_color: (1,1,1,1)
                color_mode: "custom"
                current_hint_text_color: 1,1,1,1
                line_color_normal: 0.8,0.8,0.8,1
                line_color_focus: 1,1,1,1
                on_text_validate:
                    root.caller.edit_item(item_name.text, item_category.text, item_quantity.text, item_price.text, item_note.text, item_image.text)
            MDIconButton:
                icon: 'delete'
                theme_text_color: "Custom"
                text_color:1,1,1,1
                on_release:
                    root.caller.del_item(root.caller.item_number)
                    pop.dismiss()
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0,0,16,16]
            Label:
                text:''
                size_hint_y: None
                height: 10
            BoxLayout:
                orientation: 'horizontal'
                padding: [20,0,20,0]
                spacing: 10

                BoxLayout:
                    orientation: 'vertical'
                    row_default_height: 30
                    row_force_default: True

                    MDTextField:
                        id: item_category
                        hint_text: "Category"
                        text: root.item_category
                        color_mode: "custom"
                        current_hint_text_color: 0,0,0,1
                        line_color_normal: 0.4,0.4,0.4,0.5
                        line_color_focus: 0,0.4,0,1
                        on_text_validate:
                            root.item_category = item_category.text
                            root.caller.edit_item(item_name.text, item_category.text, item_quantity.text, item_price.text, item_note.text, item_image.text)

                    MDTextField:
                        id: item_quantity
                        hint_text: "Quantity"
                        text: root.item_quantity
                        color_mode: "custom"
                        current_hint_text_color: 0,0,0,1
                        line_color_normal: 0.4,0.4,0.4,0.5
                        line_color_focus: 0,0.4,0,1
                        on_text_validate:
                            root.item_quantity = item_quantity.text
                            root.caller.edit_item(item_name.text, item_category.text, item_quantity.text, item_price.text, item_note.text, item_image.text)
                    MDTextField:
                        id: item_price
                        hint_text: "Price"
                        text: root.item_price
                        color_mode: "custom"
                        current_hint_text_color: 0,0,0,1
                        line_color_normal: 0.4,0.4,0.4,0.5
                        line_color_focus: 0,0.4,0,1
                        on_text_validate:
                            root.item_price = item_price.text
                            root.caller.edit_item(item_name.text, item_category.text, item_quantity.text, item_price.text, item_note.text, item_image.text)

                    MDTextField:
                        id: item_note
                        hint_text: "Note"
                        text: root.item_note
                        color_mode: "custom"
                        current_hint_text_color: 0,0,0,1
                        line_color_normal: 0.4,0.4,0.4,0.5
                        line_color_focus: 0,0.4,0,1
                        on_text_validate:
                            root.caller.edit_item(item_name.text, item_category.text, item_quantity.text, item_price.text, item_note.text, item_image.text)

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    Label:
                        id: item_image
                        text: root.item_image
                        color: 1,1,1,1
                        canvas.before:
                            Color:
                                rgba: 0,0.4,0,1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                    Button:
                        text: 'Change photo'
                        size_hint_y: 0.2
                    Image:
                        source: 'nutri-score.png'
            Widget:
                size_hint_y: None
                height: 10


