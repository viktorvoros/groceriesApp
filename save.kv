#:import Factory kivy.factory.Factory

<ListItemWithCounter>:
    canvas.before:
        Color:
            rgba: 0,0.4,0,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [3]
            # border: [10,10,10,10]
    text: root.list_title
    on_release:
        root.parent.parent.parent.parent.parent.edit_list(root.list_index)
    # MDCheckbox:

    # on_press:
        # root.parent.parent.parent.parent.parent.rmv()
<ListItemWithCheckbox>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [3]
    IconRightWidget:
        icon: 'food'

    LeftCheckbox:
        # on_active: app.root.rmvItem()

<ScreenManagementHome>:
    id: sm
    HomeWindow:

